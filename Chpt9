import java.util.*;
public class Chpt9 {
  public static void main(String[] args) {
    String output = "";
    Scanner k = new Scanner(System.in);
    String input = k.nextLine();
    char[] letters = input.toUpperCase().toCharArray();
    for(int i = 0; i < input.length(); i++)
      output += letters[i];
    System.out.println("You entered: " + input + ". This string is " + input.length() + " characters long. It is now: " + output);
  }
}
